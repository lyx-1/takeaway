<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CFCFCF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_title">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="BACK"
            />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="商家店名"
            android:textSize="24sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="电话"/>
    </LinearLayout>


    <ScrollView
        android:layout_below="@id/order_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#CFCFCF">
          <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:layout_marginTop="10dp"
           android:orientation="vertical"
           android:background="#EBEBEB">

           <TextView
               android:id="@+id/order_salername2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="商家店名"
               android:textSize="18sp"
               android:textColor="#1F1F1F"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <ListView
               android:id="@+id/order_saleinfo"
               android:layout_width="match_parent"
               android:layout_height="200dp"></ListView>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/order_allprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:textSize="18sp"
                  android:layout_alignParentRight="true"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="合计 "
                  android:layout_toLeftOf="@id/order_allprice"
                  android:textSize="18sp"/>
           </RelativeLayout>
          </LinearLayout>

          <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="#EBEBEB"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="配送信息"
               android:textSize="18sp"
               android:textColor="#1F1F1F"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_sendway"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="配送方式：商家配送"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="5dp"/>
          </LinearLayout>

          <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:background="#EBEBEB"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="25dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="订单详情"
                   android:textSize="18sp"
                   android:textColor="#1F1F1F"
                   android:layout_marginLeft="10dp" />
               <TextView
                   android:id="@+id/order_ordernum"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right"
                   android:layout_alignParentRight="true"
                   android:text="订单号："
                   android:layout_marginTop="5dp"/>
           </RelativeLayout>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
              android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_buyer"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:text="联系人"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_buyerphone"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:text="联系电话"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_buyeraddr"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:text="收货地址"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_buytime"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:text="下单时间"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#C2C2C2"
               android:layout_marginLeft="10dp"/>
           <TextView
               android:id="@+id/order_sendtime"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:text="送达时间"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"/>
          </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#404040"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确认收货"
            />


    </RelativeLayout>

</RelativeLayout>
